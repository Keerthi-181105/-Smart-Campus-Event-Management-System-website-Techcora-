{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["../backend/node_modules/@prisma/client"]
    },
    "typeRoots": ["../backend/node_modules/@types", "./node_modules/@types"]
  },
  "include": ["./**/*.ts"]
}
